<h2 class="ui center aligned icon medium header">
  <i class="inverted brown circular coffee icon"></i>
  Chatroom
</h2>

<div class="ui two column grid">

  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <!-- Content -->
      <div class="content chatroom-messages", id="message-container">
        <div class="ui small feed", id="messages">
          <%= render @messages %>
        </div>
      </div> 
      <!-- End Content --> 

      <!-- Extra Content -->
      <div class="extra content">
        <%= form_with model: @message, class: "ui reply form", remote: true do |f| %> 
          <div class="field">
            <div class="ui action fluid input">
              <%= f.text_field :message, placeholder: "Type..", autocomplete: false %>
              <div class="hidden">
                <%= f.button "<i class=\"ui white location arrow icon\"></i>".html_safe, class: "ui brown button" %>
              </div>
            </div>
          </div>
        <% end %>
      </div> 
      <!-- End Extra Content --> 
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
  
</div>
